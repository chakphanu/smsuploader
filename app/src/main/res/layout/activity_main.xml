<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="th.in.jane.smsreader.MainActivity"
    android:orientation="vertical"
    android:background="#fcfcfc"
    android:id="@+id/ll">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvVersion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Client version: 1.0" />

                <TextView
                    android:id="@+id/tvKeepAlive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="Keep Alive: Wait" />

                <TextView
                    android:id="@+id/tvUid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="email@email.com" />

                <TextView
                    android:id="@+id/tvDeviceId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="23"
                    android:text="Device ID" />

                <TextView
                    android:id="@+id/tvDeviceName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Device Name: Wait" />

                <TextView
                    android:id="@+id/tvForwardTo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Forward To: Wait" />

                <TextView
                    android:id="@+id/tvForwardToken"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="28"
                    android:text="Forward Token: Wait" />

            </LinearLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>
    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:gravity="bottom"
        android:text=""
        />

</LinearLayout>